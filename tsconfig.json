{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es2020",
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@application/*": ["./src/application/*"],
      "@domain/*": ["./src/domain/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "exclude": ["node_modules"]
}
